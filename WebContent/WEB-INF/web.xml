<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>text-annotator-rest</display-name>
	<servlet>
  		<servlet-name>Jersey REST Service</servlet-name>
		<servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
  		<init-param>
    		<param-name>com.sun.jersey.config.property.packages</param-name>
    		<param-value>com.cognizant.dml.text.annotator.service</param-value>
  		</init-param>
  		<init-param>
    		<param-name>GAZETTE_FILE</param-name>
    		<param-value>com/cognizant/dml/text/annotator/resource/termlist.txt</param-value>
  		</init-param>  		
  		<init-param>
    		<param-name>XML_OUTPUT</param-name>
    		<param-value>false</param-value>
  		</init-param>  		
  		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
  		<servlet-name>Jersey REST Service</servlet-name>
  		<url-pattern>/*</url-pattern>
	</servlet-mapping>  
</web-app>
